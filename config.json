{
  "text_preprocessing": {
    "remove_stopwords": true,
    "min_token_length": 3
  },
  "search": {
    "max_results": 10,
    "min_similarity_score": 0.01
  },
  "storage": {
    "documents_path": "documents",
    "enable_persistence": true
  },
  "performance": {
    "enable_caching": true,
    "cache_size_limit": 1000
  },
  "ui": {
    "page_title": "Questify - Text Search Engine",
    "results_per_page": 10,
    "enable_file_upload": true,
    "max_file_size_mb": 10
  }
}